FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluxScheme      HLLC;

ddtSchemes
{
    default         Euler;
    timeIntegrator  RK2SSP 3;
}

gradSchemes
{
    default         cellMDLimited leastSquares 1.0;
}

divSchemes
{
    default         none;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
	default						cubic;
    reconstruct(alpha)  		ROUNDA; //vanLeer;
    reconstruct(rho)    		ROUNDA; //vanLeer;
    reconstruct(U)      		ROUNDAV;
    reconstruct(e)      		ROUNDA; //vanLeer;
    reconstruct(p)      		ROUNDA;
    reconstruct(speedOfSound)  	ROUNDA;
}

snGradSchemes
{
    default         corrected;
}


